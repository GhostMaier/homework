package Lesson5.homework;

public class task4 {
    public static void main(String[] args) {
int n = (int)(Math.random() * 28801);
        System.out.println("До конца рабочего дня осталось " + n + " секунд.");
        System.out.println();


        int dayEnd = n /3600;

        if (dayEnd > 1) {
        System.out.println("осталось " + dayEnd + " часов");
        } else if (dayEnd == 1) {
            System.out.println("остался час");
        } else {
            System.out.println("Осталось меньше часа");
        }



    }
}
