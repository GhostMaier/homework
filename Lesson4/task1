package Lesson4.homework;

import java.util.Scanner;

public class task1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Первое слово");
        String word1 = scanner.next();

        System.out.println("Второе слово");
        String word2 = scanner.next();

        int halfLength1 = word1.length() - 6;
        String result1 = word1.substring(0,2);
        int halfLength2 = word2.length() - 6;
        String result2 = word2.substring(4,6);


        System.out.println("Первое слово " + result1);
        System.out.println("Воторое слово " + result2);

    }


}
